@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{ Layout = null; }
<!DOCTYPE html>

<html>
<title>@localizer["Wallet App"]</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:15%">
        <partial name="_Culture" />
        <h3 class="w3-bar-item">@localizer["Menu"]</h3>
        <a href="/Transactions/Index" class="w3-bar-item w3-button">@localizer["Transaction List"]</a>
        <a href="/Transactions/NewTransaction" class="w3-bar-item w3-button">@localizer["Add Transaction"]</a>
    </div>

    <!-- Page Content -->
    <div style="margin-left:15%">
        <div class="w3-container w3-teal">
            <h1>@localizer["My Wallet"]</h1>
        </div>
        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

</body>
</html>
